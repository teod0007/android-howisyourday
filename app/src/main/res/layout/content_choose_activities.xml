<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prjproject.tcc.activities.ChooseActivitiesActivity"
    tools:showIn="@layout/activity_choose_activities">

    <Button
        style="@style/btnStyleOrange"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        android:id="@+id/btnNext"
        android:text="@string/button_next"
        android:textSize="@dimen/button_text_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_choose_activities"
        android:id="@+id/txtTitleNewDay"
        android:textSize="@dimen/subtitle_small_text_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/titlecolor"
        android:background="@drawable/border_shadow"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="18.5%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/category_food"
        android:id="@+id/txtCategoryFood"
        android:textSize="@dimen/category_name_text_size"
        android:layout_below="@+id/txtTitleNewDay"
        android:background="@color/foodcolor"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="18.5%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/category_medicine"
        android:id="@+id/txtCategoryMedicine"
        android:textSize="@dimen/category_name_text_size"
        android:layout_below="@+id/txtTitleNewDay"
        android:layout_toRightOf="@+id/txtCategoryFood"
        android:background="@color/medcolor"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="18.5%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/category_social"
        android:id="@+id/txtCategorySocial"
        android:textSize="@dimen/category_name_text_size"
        android:layout_below="@+id/txtTitleNewDay"
        android:layout_toRightOf="@+id/txtCategoryMedicine"
        android:background="@color/socialcolor"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="18.5%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/category_fun"
        android:id="@+id/txtCategoryFun"
        android:textSize="@dimen/category_name_text_size"
        android:layout_below="@+id/txtTitleNewDay"
        android:layout_toRightOf="@+id/txtCategorySocial"
        android:background="@color/funcolor"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="18.5%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/category_study"
        android:id="@+id/txtCategoryStudy"
        android:textSize="@dimen/category_name_text_size"
        android:layout_below="@+id/txtTitleNewDay"
        android:layout_toRightOf="@+id/txtCategoryFun"
        android:background="@color/studycolor"
        android:gravity="center"
        android:padding="5dp"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="18.5%"
        android:id="@+id/listViewFood"
        android:layout_below="@+id/txtCategoryFood"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        android:background="@color/foodcolor"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="18.5%"
        android:id="@+id/listViewMedicine"
        android:layout_below="@+id/txtCategoryFood"
        android:layout_toRightOf="@+id/listViewFood"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        android:background="@color/medcolor"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="18.5%"
        android:id="@+id/listViewSocial"
        android:layout_below="@+id/txtCategoryFood"
        android:layout_toRightOf="@+id/listViewMedicine"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        android:background="@color/socialcolor"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="18.5%"
        android:id="@+id/listViewFun"
        android:layout_below="@+id/txtCategoryFood"
        android:layout_toRightOf="@+id/listViewSocial"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/item_margin_right_small"
        android:background="@color/funcolor"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="18.5%"
        android:id="@+id/listViewStudy"
        android:layout_below="@+id/txtCategoryFood"
        android:layout_toRightOf="@+id/listViewFun"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        android:background="@color/studycolor"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="40%"
        android:id="@+id/gridViewActivities"
        android:layout_centerHorizontal="true"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/listViewFood"
        android:layout_above="@+id/btnNext"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_shadow"/>


</android.support.percent.PercentRelativeLayout>
